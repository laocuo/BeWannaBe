<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customize="http://schemas.android.com/apk/res/com.example.doanything"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.doanything.view.CustomizedView.AudioControlView
        android:id="@+id/audio_control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        customize:firstColor="@android:color/holo_blue_light"
        customize:secondColor="@android:color/holo_red_light"
        customize:circleWidth="20dp"
        customize:dotCount="8"
        customize:splitSize="25"
        customize:bg="@drawable/sample_0"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
</LinearLayout>